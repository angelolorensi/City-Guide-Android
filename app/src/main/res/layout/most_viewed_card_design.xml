<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mv_img"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/mcdonalds"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/mv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mcdonald_s"
            android:layout_toRightOf="@id/mv_img"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/baloo"/>

        <RatingBar
            android:id="@+id/mv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/mv_title"
            android:layout_toRightOf="@id/mv_img"
            android:layout_marginLeft="10dp"
            android:rating="4"/>

        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mc_donalds_description"
            android:layout_below="@id/mv_rating"
            android:layout_toRightOf="@id/mv_img"
            android:padding="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>